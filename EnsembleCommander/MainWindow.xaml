<Window x:Class="EnsembleCommander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnsembleCommander"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="1280" Loaded="Window_Loaded" Unloaded="Window_Unloaded">
    <StackPanel Orientation="Horizontal">
        <StackPanel Width="300">
            <Label Content="MIDI"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="OnMidi" Content="MIDI On" Margin="5" Click="OnMidi_Click"/>
                <RadioButton x:Name="OffMidi" Content="MIDI Off" Margin="5" Click="OffMidi_Click"/>
            </StackPanel>
            <Label Content="MODE"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="OnWholeTone" Content="OnWholeTone" Margin="5" Click="OnWholeTone_Click"/>
                <RadioButton x:Name="OnArpeggio" Content="OnArpeggio" Margin="5" Click="OnArpeggio_Click"/>
                <RadioButton x:Name="OnFree" Content="OnFree" Margin="5" Click="OnFree_Click"/>
            </StackPanel>
        </StackPanel>
        <ListBox Name="PivotList" Width="320" SelectionChanged="PivotList_SelectionChanged"/>
        <Grid Width="640">
            <Image Name="imageColor" Height="480" Width="640"/>
            <Canvas x:Name="CanvasFaceParts" Height="480" Width="640"/>
        </Grid>
    </StackPanel>
</Window>
