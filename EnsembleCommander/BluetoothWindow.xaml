<Window x:Class="EnsembleCommander.BluetoothWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnsembleCommander"
        mc:Ignorable="d"
        Title="BluetoothWindow" Height="300" Width="100">
    <StackPanel>
        <CheckBox x:Name="Player1" Content="Player1" Checked="Player1_Checked" HorizontalAlignment="Left" Margin="0,20,0,0" />
        <CheckBox x:Name="Player2" Content="Player2" Checked="Player2_Checked" HorizontalAlignment="Left" />
        <CheckBox x:Name="Player3" Content="Player3" Checked="Player3_Checked" HorizontalAlignment="Left"/>
        <Button x:Name="ListenButton" Click="ListenButton_Click" Content="Start Listening"/>
        <Button x:Name="DisconnectButton" IsEnabled="False" Click="DisconnectButton_Click" Content="Disconnect"/>
        <Button x:Name="ReadButton" Content="Read" IsEnabled="False" Click="ReadButton_Click"/>
        <Button x:Name="SendButton" Content="Send" IsEnabled="False" Click="SendButton_Click"/>
        <Button x:Name="PingButton" Content="Ping" IsEnabled="False" Click="PingButton_Click"/>
        <TextBlock x:Name="StatusMessage" Text="{Binding X}"/>
    </StackPanel>
</Window>
